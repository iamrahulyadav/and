<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_window_focused="false" android:state_enabled="true">
		<shape>
			<gradient android:startColor="@color/button_pressed" android:endColor="@color/grey" android:angle="270" />
			<corners android:radius="3dp" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="12dp" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="@color/button_pressed" android:endColor="@color/grey" android:angle="270" />
			<corners android:radius="3dp" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="12dp" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:startColor="@color/black" android:endColor="@color/button_focused" android:angle="270" />
			<corners android:radius="3dp" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="12dp" />
		</shape>
	</item>
	<item android:state_enabled="true">
		<shape>
			<gradient android:startColor="@color/grey" android:endColor="@color/button_default" android:angle="270" />
			<corners android:radius="3dp" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="12dp" />
		</shape>
	</item>
</selector>